rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Products folder - public read, admin write
    match /products/{allPaths=**} {
      allow read: if true; // Public read access for product images
      allow write: if request.auth != null; // Authenticated users can upload
    }
    
    // User avatars - users can manage their own avatars
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat files - participants can access
    match /chat/{chatId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
